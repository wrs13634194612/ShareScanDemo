<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        android:id="@+id/title_activity_qr"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="24dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        titlebar:centerTextColor="@color/black"
        titlebar:centerType="textView"
        titlebar:fillStatusBar="false"
        titlebar:leftDrawablePadding="12dp"
        titlebar:leftImageResource="@drawable/ic_return_black"
        titlebar:leftType="imageButton"
        titlebar:showBottomLine="false"
        titlebar:titleBarColor="@color/transparent" />

    <ImageView
        android:id="@+id/iv_set_phone_img"
        android:layout_width="260dp"
        android:layout_height="212dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/set_phone_img" />

    <TextView
        android:id="@+id/tv_set_phone_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_set_phone_img"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="您暂未绑定手机号，无法修改密码"
        android:textColor="@color/tab_gray"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tvUpdate"
        android:layout_width="251dp"
        android:layout_height="46dp"
        android:layout_below="@+id/tv_set_phone_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_update_next"
        android:gravity="center"
        android:text="绑定手机号"
        android:textColor="@color/white"
        android:textSize="16sp" />


</RelativeLayout>