<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="252dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tip_dialog">

        <ImageView
            android:id="@+id/iv_tip_view_btn"
            android:layout_width="92dp"
            android:layout_height="77dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:src="@mipmap/ic_ap_success" />

        <TextView
            android:id="@+id/tv_tip_view_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_tip_view_btn"
            android:layout_marginTop="26dp"
            android:gravity="center"
            android:text="分享成功"
            android:textColor="#000000"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_done_tip_view_btn"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_below="@+id/tv_tip_view_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/selector_config_net"
            android:text="知道了"
            android:textColor="#ffffffff"
            android:textSize="16dp" />

    </RelativeLayout>
</RelativeLayout>